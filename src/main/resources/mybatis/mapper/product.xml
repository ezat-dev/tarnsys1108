	        #{cnt}, 
	        #{writer}, 
	        #{insertday}, 
	        #{updateday}, 
	        #{base_tmp1}, 
	        #{base_tmp2}, 
	        #{base_tmp3}, 
	        #{base_tmp4}, 
	        #{base_cp1}, 
	        #{base_cp2}, 
	        #{base_cp3}, 
	        #{base_cyc1}, 
	        #{base_cyc2}, 
	        #{base_cyc3}, 
	        #{base_cyc4}, 
	        #{cycleno}, 
	        #{agitate_rpm}, 
	        #{material}, 
	        #{danjung}, 
	        #{deepL}, 
	        #{deepH}, 
	        #{surfhard}, 
	        #{deephard}, 
	        #{inshard}, 
